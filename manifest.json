{
  "manifest_version": 3,
  "name": "DevDocs Simplifier",
  "version": "1.0.0",
  "description": "Simplify complex technical documentation using intelligent text processing - perfect for developers learning new technologies",
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "DevDocs Simplifier"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
